{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["./src/assets"],
      "@utils/*":  ["./src/utils"],
      "@store/*":  ["./src/store"],
      "@services/*": ["./src/services"],
      "@features/*": ["./src/features"],
      "@context/*":  ["./src/context"],
      "@layouts/*":  ["./src/layouts"],
      "@hooks/*": ["./src/hooks"],
      "@styles/*":  ["./src/styles"],
      "@routes/*": ["./src/routes"],
      "@pages/*": ["./src/pages"],
      "@mocks/*": ["./src/mocks"],
      "@lib/*": ["./src/lib"]
    }
  },
  "include": ["src"]
}
